{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src"]
  }
  